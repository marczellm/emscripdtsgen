{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake - Build",
            "type": "cmake",
            "command": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": "build"
        },
        {
            "label": "Build TypeScript",
            "type": "shell",
            "command": "npx tsc",
            "group": "build",
            "dependsOn": "CMake - Build",
            "problemMatcher": "$tsc"
        },
        {
            "label": "Dev server",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "type": "shell",
            "isBackground": true,
            "command": "python -m http.server",
            "problemMatcher": []
        },
        {
            "label": "tsc watch: basic",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "type": "shell",
            "command": "npx tsc --watch",
            "options": {"cwd": "examples/basic"},
            "problemMatcher": "$tsc-watch",
            "isBackground": true
        },        
        {
            "label": "tsc watch: modularize",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "type": "shell",
            "command": "npx tsc --watch",
            "options": {"cwd": "examples/modularize"},
            "problemMatcher": "$tsc-watch",
            "isBackground": true
        },        
        {
            "label": "tsc watch: es6",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "type": "shell",
            "command": "npx tsc --watch",
            "options": {"cwd": "examples/es6"},
            "problemMatcher": "$tsc-watch",
            "isBackground": true
        }
    ]
}